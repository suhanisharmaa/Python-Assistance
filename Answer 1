#1a
def pattern(n):
    a = 2*n - 2
    for i in range(0, n):
        for j in range(0, a):
            print(end=" ")
        a = a - 2
        for j in range(0, i+1):
            print("* ", end="")
        print("\r")
 
n = 5
pattern(n)

#1b
def  al(n):
    num = 65
    for i in range(0, n):
        for j in range(0, i+1):
            ch = chr(num)
            print(ch, end=" ")
            num = num +1
        print("\r")
n = 5
al(n)
